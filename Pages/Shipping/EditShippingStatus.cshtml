@page "{id:int}"
@model Fast_Track_Web_Application.Pages.Shipping.EditShippingStatusModel
@{
    ViewData["Title"] = "Update Shipping Status";
}

<h2>Update Shipping Status</h2>

<form method="post">
    <div class="form-group">
        <label for="ShippingStatus">Shipping Status</label>
        <select asp-for="Product.ShippingStatus" class="form-control">
            <option>Pending</option>
            <option>Shipped</option>
            <option>Delivered</option>
            <option>Cancelled</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Update</button>
</form>
