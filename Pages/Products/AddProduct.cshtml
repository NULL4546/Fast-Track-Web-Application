@page
@model Fast_Track_Web_Application.Pages.Products.AddProductModel

@{
    ViewData["Title"] = "Add Product";
}

<h2>Add Product</h2>

<form method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Details">Details</label>
        <textarea asp-for="Product.Details" class="form-control"></textarea>
        <span asp-validation-for="Product.Details" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>
